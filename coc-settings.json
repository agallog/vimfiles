{
    "coc.preferences.formatOnSaveFiletypes": ["css", "Markdown,javascript,json"],
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "disableWorkspaceFolders": true,
            "filetypes": ["go"]
        }
    },
    "yaml.schemas": {
        "kubernetes": "/*.yaml"
    }
}
